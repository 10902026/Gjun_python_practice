list_name = ["Amanda","Backerham","Cindarella","David","Epsillon"]
list_height = [198,187,172,164,180]
list_weight = [40,60,50,80,70]
tuple_people =[[list_name[0],list_height[0],list_weight[0]],
               [list_name[1],list_height[1],list_weight[1]],
               [list_name[2],list_height[2],list_weight[2]],
               [list_name[3],list_height[3],list_weight[3]],
               [list_name[4],list_height[4],list_weight[4]]]
print(sorted(tuple_people, key = lambda x:(x[2],x[1]),reverse=True))